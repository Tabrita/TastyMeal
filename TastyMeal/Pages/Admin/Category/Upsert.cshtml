@page
@model TastyMeal.Pages.Admin.Category.UpsertModel
@{
    ViewData["Title"] = "Upsert";
}

<br />
<br />
<form method="post" asp-action="Upsert">
    <div class="container table-bordered" style="width:60%">
        <br />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.CategoryModel.Id != 0)
            {
                <input type="hidden" asp-for="CategoryModel.Id" />
            }
            <div class="col-12" style="border-bottom:1px solid #e5e5e5">
                <h2>Category</h2>
            </div>
            <div class="col-11 pt-4">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="CategoryModel.Name" class="control-label"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="CategoryModel.Name" />
                        <span asp-validation-for="CategoryModel.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="CategoryModel.DisplayOrder" class="control-label"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="CategoryModel.DisplayOrder" />
                        <span asp-validation-for="CategoryModel.DisplayOrder" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">
                                <button type="submit" class="btn btn-primary form-control">
                                    @(Model.CategoryModel.Id != 0 ? "Update" : "Create")
                                </button>                                
                            </div>
                            <div class="col-6">
                                <a asp-page="./Index" class="btn btn-info form-control">Back To List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

