@page
@model TastyMeal.Pages.Admin.Category.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="card shadow mb-4 col-12">
        <div class="card-header py-3 row">
            <div class="col-md-6">
                <h5 class="m-0 font-weight-bold text-primary">Category List</h5>
            </div>
            <div class="col-md-6 text-right">
                <a class="btn btn-primary" asp-page="UpSert"><i class="fas fa-plus"></i>&nbsp; Create</a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="DT_Load" class="table table-bordered table-striped" style="width:100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Category Name</th>
                            <th>Display Order</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/category.js"></script>
}
